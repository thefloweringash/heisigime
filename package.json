{
  "name": "heisigime",
  "version": "1.0.0",
  "description": "Remembering the Kanji based Kanji entry method",
  "main": "index.js",
  "scripts": {
    "start": "yarn build:data && parcel serve html/index.html",
    "build": "yarn build:data && yarn build:bundle && yarn build:index",
    "build:data": "make -f Makefile.data",
    "build:bundle": "NODE_ENV=production parcel build html/index.html",
    "build:index": "NODE_ENV=production parcel build -t node -d dist-prerender --cache-dir .cache-prerender scripts/build_index.js && node ./dist-prerender/build_index.js",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "karma start --single-run"
  },
  "author": "Andrew Childs <lorne@cons.org.nz>",
  "license": "BSD-2-Clause",
  "staticFiles": {
    "staticPath": [
      "node_modules/kuromoji/dict"
    ],
    "watcherGlob": "*.dat.gz"
  },
  "devDependencies": {
    "@types/aphrodite": "^0.5.13",
    "@types/chai": "^4.1.7",
    "@types/doublearray": "^0.0.29",
    "@types/heap": "^0.2.28",
    "@types/karma": "^3.0.2",
    "@types/levenshtein": "^1.0.1",
    "@types/mocha": "^5.2.6",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "autoprefixer": "^9.5.1",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-parcel": "^0.5.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "less": "^3.9.0",
    "mocha": "^6.1.4",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "aphrodite": "^2.3.1",
    "heap": "^0.2.6",
    "kuromoji": "^0.1.2",
    "levenshtein": "^1.0.5",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "wanakana": "^4.0.2"
  }
}
